<%- include('./partials/header') %>

<div class="mt-4">
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>

    <% if (messages.error.length > 0) { %>
        <script>
            Swal.fire({
                icon: 'error',
                title: 'Error',
                text: '<%= messages.error[0] %>',
                timer: 3000,
                showConfirmButton: false,
                toast: true,
                position: 'top-end'
            });
        </script>
        <% } %>

            <% if (messages.success.length > 0) { %>
                <script>
                    Swal.fire({
                        icon: 'success',
                        title: 'Success',
                        text: '<%= messages.success[0] %>',
                        timer: 3000,
                        showConfirmButton: false,
                        toast: true,
                        position: 'top-end'
                    });
                </script>
                <% } %>
</div>
<div class="w-full min-h-screen flex items-center justify-center bg-gray-100 p-4 lg:p-20">
    <div class="w-full max-w-lg bg-white rounded-lg shadow-lg p-10">
        <h4 class="text-2xl font-bold text-center capitalize mb-6">Admin Access</h4>
        <form action="/owner/adminpage" method="post">
            <div class="mb-4">
                <input class="block bg-zinc-100 w-full px-4 py-3 border border-zinc-300 rounded-md shadow-sm focus:outline-none focus:ring-2 focus:ring-blue-500"
                    type="email" placeholder="Email" name="email" required>
            </div>
            <div class="mb-6">
                <input class="block bg-zinc-100 w-full px-4 py-3 border border-zinc-300 rounded-md shadow-sm focus:outline-none focus:ring-2 focus:ring-blue-500"
                    type="password" placeholder="Password" name="password" required>
            </div>
            <button class="w-full px-5 py-3 rounded-md bg-blue-500 text-white font-semibold hover:bg-blue-600 transition duration-200"
                type="submit">
                Login
            </button>
        </form>
    </div>
</div>

<%- include('./partials/footer') %>
